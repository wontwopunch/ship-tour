<%- include('layouts/navbar') %>

<div class="container">
  <h1>선박 관리</h1>

  <!-- 선박 추가 폼 -->
  <form action="/ship/add" method="POST" class="ship-form">
    <input type="text" name="name" placeholder="선박명" required>
    <button type="submit">추가</button>
  </form>

  <!-- 선박 리스트 -->
  <table border="1" id="shipTable">
    <thead>
      <tr>
        <th>선박명</th>
      </tr>
    </thead>
    <tbody>
      <% ships.forEach(ship => { %>
        <tr>
          <td><%= ship.name %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>

<style>
  .container {
    margin: 20px;
  }

  h1 {
    text-align: center;
    margin-bottom: 20px;
  }

  .ship-form {
    margin-bottom: 20px;
    display: flex;
    justify-content: center;
    gap: 10px;
  }

  .ship-form input {
    padding: 5px;
    font-size: 14px;
  }

  .ship-form button {
    padding: 5px 10px;
    background-color: #007bff;
    color: white;
    border: none;
    cursor: pointer;
    font-size: 14px;
    border-radius: 5px;
  }

  .ship-form button:hover {
    background-color: #0056b3;
  }

  table {
    width: 100%;
    border-collapse: collapse;
    margin: 0 auto;
  }

  table th, table td {
    padding: 10px;
    text-align: center;
  }

  table th {
    background-color: #007bff;
    color: white;
  }

  table tr:nth-child(even) {
    background-color: #f2f2f2;
  }
</style>
